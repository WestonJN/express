head
  title Form
form(action='/response' method='GET')
  label(for='vname') Visitor Name:
  br
  input#vname(type='text' name='vname' placeholder='Enter your name' required='')
  br
  label(for='aname') Assistant Name:
  br
  input#aname(type='text' name='aname' placeholder="Enter assistant's name" required='')
  br
  label(for='age') Age:
  br
  input#age(type='int' name='age' placeholder='Enter your age' required='')
  br
  label(for='date') Date of Visit:
  br
  input#date(type='date' name='date' placeholder='Enter date of your visit' required='')
  br
  label(for='time') Time of Visit:
  br
  input#time(type='time' name='time' placeholder='Enter time of your visit' required='')
  br
  label(for='comments') Comments:
  br
  textarea#comments(name='comments' cols='20' rows='10')
  br
  input(type='submit' value='Submit')
